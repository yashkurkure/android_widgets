<?xml version="1.0" encoding="utf-8"?>
<!--
This file defines our widget's layout.

    Keep in mind that not all Views work inside a widget, since widget layouts are based on RemoteViews which dont
    support all kinds of layouts or view widgets.
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--A simple button-->
    <Button
        android:id="@+id/example_widget_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Launch Activity"/>

</RelativeLayout>